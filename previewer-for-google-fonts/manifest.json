{
    "name": "Previewer for Google Fonts",
    "description": "Easily sample Google fonts on any web page.",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons":
    {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action":
    {
        "default_popup": "popup.html",
        "default_icons":
        {
            "16": "icon16.png",
            "32": "icon32.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },  
    "permissions": 
    [
        "activeTab",
        "scripting",
        "storage",
        "unlimitedStorage"
    ]      
}
